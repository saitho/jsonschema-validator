{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://stackhead.io/schemas/project-definition.sample.json",
  "title": "Sample definition",
  "description": "This is NOT the actual schema for project definitions, just a sample for testing",
  "type": "object",
  "definitions": {
    "enum1-properties": {
      "properties": {
        "settings": {
          "additionalProperties": false,
          "properties": {
            "propContainer": {
              "type": "object",
              "properties": {
                "prop1": {
                  "type": "string"
                },
                "prop2": {
                  "type": "integer"
                }
              },
              "required": ["prop1", "prop2"]
            }
          }
        }
      }
    },
    "enum2-properties": {
      "properties": {
        "settings": {
          "additionalProperties": false,
          "properties": {
            "optionalString": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "settings": {
      "description": "Deployment configuration",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "enum1", "enum2" ]
        },
        "settings": {
          "type": "object"
        }
      },
      "allOf": [
        {
          "if": {"properties": {"type": {"const": "enum1"}}},
          "then": { "$ref": "#/definitions/enum1-properties" }
        }, {
          "if": {"properties": {"type": {"const": "enum2"}}},
          "then": { "$ref": "#/definitions/enum2-properties" }
        }
      ],
      "required": ["type"]
    }
  },
  "required": ["name"]
}
